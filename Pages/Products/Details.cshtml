@page
@model ModelAsp1.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h4 class="card-title">Product Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product.ReleaseDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product.ReleaseDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product.Genre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product.Genre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product.Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product.Quantity)
                    </dd>
                </dl>
            </div>
            <div>
                @if (!string.IsNullOrWhiteSpace(Model.Product.imageUrl))
                {
                    <div class="text-center">
                        <img src="@Model.Product.imageUrl" alt="@Model.Product.Title" style="max-width: 100%; max-height: 400px;" />
                    </div>
                }
                else
                {
                    <div class="text-center mt-4">
                        <img src="/images/empty-image.png" alt="Image par défaut" style="max-width: 100%; max-height: 400px;" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
